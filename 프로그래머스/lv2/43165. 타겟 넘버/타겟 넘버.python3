answer = 0

def loop(numbers, num, depth, value, target):
    global answer
    value += num
    
    if depth == len(numbers) - 1:
        if value == target:
            answer += 1
        
    else:
        loop(numbers, numbers[depth + 1], depth + 1, value, target)
        loop(numbers, - numbers[depth + 1], depth + 1, value, target)

def solution(numbers, target):
    global answer
    
    loop(numbers, numbers[0], 0, 0, target)
    loop(numbers, - numbers[0], 0, 0, target)
            
    return answer