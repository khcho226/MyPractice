def solution(n):
    answer = 0
    three = ""
    
    while n >= 3:
        three = str(n % 3) + three
        n = n // 3
    three = str(n) + three
    three = str(int(three[::-1]))
    
    for i in range(len(three)):
        answer += (3 ** (len(three) - 1 - i)) * int(three[i])
    
    return answer